{
    "compilerOptions": {
        "target": "es2017",
        "module": "None",
        "moduleResolution": "Node",
        "isolatedModules": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "removeComments": true,
        "noLib": false,
        "strict": true,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "../dist",
        "esModuleInterop": true,
        "alwaysStrict": true
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**"
    ],
    "exclude":[
        "../node_modules"
    ],
    "files": [
        "generate.ts"
    ],
}
