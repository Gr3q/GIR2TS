{
    "compilerOptions": {
        "target": "es5",
        "module": "None",
        "moduleResolution": "Node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": true,
        "strict": true,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**"
    ],
    "include": [
        "typings/**/*",
        "extensions/**/*"
    ],
    "exclude": [
        "src/es6.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
