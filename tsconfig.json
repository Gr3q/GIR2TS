{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**"
    ],
    "files": [
        "sample.ts",
        "src/es6.d.ts",
        "src/node.d.ts",
        "src/script.ts",
        "typings/Atk-1.0.d.ts",
        "typings/cairo-1.0.d.ts",
        "typings/Gdk-3.0.d.ts",
        "typings/GdkPixbuf-2.0.d.ts",
        "typings/Gio-2.0.d.ts",
        "typings/GLib-2.0.d.ts",
        "typings/GObject-2.0.d.ts",
        "typings/Gtk-3.0.d.ts",
        "typings/Pango-1.0.d.ts",
        "typings/xlib-2.0.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
